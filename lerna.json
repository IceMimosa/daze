{
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "allowBranch": "master",
      "exact": true,
      "conventionalCommits": true
    }
  },
  "version": "independent"
}
